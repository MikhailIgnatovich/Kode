<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragments.DetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/details_cardView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/background_details_cardview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_user_photo_details"
                        android:layout_width="104dp"
                        android:layout_height="104dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_user_name_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/tab_text_selected"
                        android:textSize="24sp"
                        app:fontFamily="@font/inter_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_user_tag_details"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_user_photo_details" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_user_tag_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/tv_tag_text_color"
                        android:textSize="17sp"
                        app:fontFamily="@font/inter_regular"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_user_name_details"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tv_user_name_details" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_user_position_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/tv_position_text_color"
                        android:textSize="13sp"
                        app:fontFamily="@font/inter_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_user_name_details" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_back_button_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:background="@color/background_details_cardview"
                        android:elevation="0dp"
                        android:src="@drawable/back_icon_details"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_cardView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_date_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/tab_text_selected"
                android:textSize="16sp"
                app:fontFamily="@font/inter_medium"
                app:layout_constraintBottom_toBottomOf="@+id/iv_date"
                app:layout_constraintStart_toEndOf="@id/iv_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_old_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/tv_tag_text_color"
                android:textSize="16sp"
                app:fontFamily="@font/inter_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_user_date_details"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_phone_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/tab_text_selected"
                android:textSize="16sp"
                app:fontFamily="@font/inter_medium"
                app:layout_constraintBottom_toBottomOf="@+id/iv_phone"
                app:layout_constraintStart_toEndOf="@id/iv_phone" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>